<!DOCTYPE html>
<html>

<%- include('./partials/head') %> <!-- Tags para importar el head -->

  <body>

    <%- include('./partials/nav') %>

      <!-- Page content -->
      <div class="ps-content">

        <hr />
        <!-- Menu Section -->
        <div class="ps-row ps-padding-64" id="menu">
          <div class="ps-col l6 ps-padding-large">
            <h1 class="ps-center">Nuestro Menu</h1>
            <br />

            <% for( let i=0; i < menu.length; i++ ) { %> <!-- Estructura dinamica for -->
              <a href="/detalle/ <%= menu[i].id %> ">
                <h4>
                  <%= menu[i].titulo %>
                </h4>
                <p class="ps-text-grey">
                  <%= menu[i].descripcion %> U$S <%= menu[i].precio %>
                </p>
                <br />
              </a>
              <% } %>

          </div>

          <div class="ps-col l6 ps-padding-large ps-img-menu">
            <img src="/images/menu.jpg" class="ps-round ps-image ps-opacity-min" alt="Menu" />
          </div>
        </div>

        <%- include('./partials/footer',{ clase:'bottom'}) %>
      </div>
  </body>

</html>